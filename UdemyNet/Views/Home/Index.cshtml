@model List<Customer> 
@{
    Layout= "~/Views/Shared/_Layout.cshtml";
}
        <h3>Customer List</h3>

        <div class="row">
            <div class="col-4">
                @await Component.InvokeAsync("News")
                <partial name="_NewsPartial" model="NewsContext.List"/>
            </div>
            <div class="col-8">
                <a asp-action="Create" asp-controller="Home">Create</a>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Age</th>
                            <th></th>
                        </tr>
         
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.Age</td>
                            <td>
                                <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id">Update</a>
                                <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id">Remove</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                 
                </table>
            </div>
        </div>

        
