@using UdemyNet.Models
@model List<Customer> 
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        @* NPM *@
        <title>Customer List</title>
        <link href="~/style.css"rel="stylesheet"/>,
        <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css"
        rel="stylesheet"/>

    </head>
    <body>
        <div class="container">
            <h3>Customer List</h3>
           <a asp-action="Create" asp-controller="Home">Create</a>
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                   <th>Name</th>
                   <th>Surname</th>
                   <th>Age</th>
                   <th></th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                   <td>@item.Name</td>
                   <td>@item.Surname</td>
                   <td>@item.Age</td>
                   <td>
                       <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id">Update</a>
                       <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id">Remove</a>
                   </td>
                </tr>
                }
            </tbody>
        
        
        </table>

        </div>
       

    </body>
</html>
   